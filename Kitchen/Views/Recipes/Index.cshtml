@model Kitchen.Models.SimpleRecipeViewModel

@{
    ViewBag.Title = "Рецепты: " + Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="span4"></div>
    <div class="span7">
        <h2>@Model.Name</h2>
        <div>
            @Model.Description
        </div>
        <div>
            <table class="table table-striped table-hover">
                <tr>
                    <th>Название</th>
                    <th>Количество</th>
                    <th>Единицы измерения</th>
                </tr>
                @foreach (var ingridient in Model.Ingridients)
                {
                    <tr>
                        <td>@ingridient.Name</td>
                        <td>@ingridient.Ammount </td>
                        <td>@ingridient.MeasureName</td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <div class="span1"></div>
</div>
