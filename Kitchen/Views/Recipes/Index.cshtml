@model Kitchen.Models.SimpleRecipeViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<div style="text-align: left">@Model.Description
</div>
<div style="width: 50%">
    <table class="table table-striped table-hover">
        <tr>
            <th>Название</th>
            <th>Количество</th>
            <th>Единицы измерения</th>
            </tr>
        @foreach (var ingridient in Model.Ingridients.Components)
        {
            <tr>
                <td>@ingridient.ProductType.Name</td>
                <td>@ingridient.Ammount </td>
                <td>@ingridient.Measurement.ToString()</td>
            </tr>
        }
    </table>
</div>
